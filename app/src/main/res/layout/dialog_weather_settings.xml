<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/primaryInverseColor"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/weatherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/primaryColor"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/currentCityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/primaryColorTrans50"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/citySearchInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="?attr/primaryColor"
        android:hint="@string/search_city"
        android:textColorHint="?attr/primaryColorTrans50"
        android:background="@null"
        android:padding="8dp"
        android:singleLine="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/searchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/primaryColorTrans50"
        android:visibility="gone"
        android:layout_marginBottom="4dp" />

    <ListView
        android:id="@+id/cityResultsList"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>
